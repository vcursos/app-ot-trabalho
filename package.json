{
  "name": "ot-telecom",
  "version": "1.0.0",
  "private": true,
  "description": "Controle de OTs e Logística Diária - PWA + Capacitor",
  "scripts": {
    "serve": "npx http-server -p 5173 .",
    "build": "echo 'Projeto estático - usar como está'",
    "cap:init": "npx cap init ot-telecom com.ot.telecom -y",
    "cap:copy": "npx cap copy",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "@capacitor/core": "^6.1.0"
  }
}
